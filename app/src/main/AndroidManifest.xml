<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.githupappuser">

    <permission android:name="com.example.githupappuser.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="com.example.githupappuser.WRITE_DATABASE" android:protectionLevel="normal" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".provider.UserFavoriteProvider"
            android:authorities="com.example.githupappuser"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.githupappuser.READ_DATABASE"
            android:writePermission="com.example.githupappuser.WRITE_DATABASE"/>

        <activity android:name=".view.UserFavoritePage"
            android:parentActivityName=".view.MainActivity"
            />
        <activity android:name=".view.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.UserDetail"
            android:parentActivityName=".view.MainActivity" />
    </application>

</manifest>